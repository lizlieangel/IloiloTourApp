<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/food_height">
    <ImageView
        android:id="@+id/food_image"
        android:layout_width="@dimen/food_height"
        android:layout_height="@dimen/food_height"
        android:scaleType="centerCrop"
        android:layout_marginRight="@dimen/margin"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/food_height"
        android:orientation="vertical"
        android:layout_toRightOf="@id/food_image">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/food_name"
            android:textSize="@dimen/title_size"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:textAllCaps="true"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/food_place"
            android:textSize="@dimen/food_place"
            android:textStyle="bold"
            android:gravity="top"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/food_desc"
            android:textSize="@dimen/desc_size"
            android:textStyle="italic"
            android:gravity="top"/>
    </LinearLayout>
</RelativeLayout>